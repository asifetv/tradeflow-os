# Application
APP_ENV=development
APP_DEBUG=true
CORS_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000
COMPANY_NAME=TradeFlow OS

# Database
DATABASE_URL=postgresql+asyncpg://tradeflow:tradeflow@localhost:5432/tradeflow
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_RECYCLE=3600

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Object Storage (MinIO/S3)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=documents
MINIO_SECURE=false

# Authentication & Security
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
BCRYPT_ROUNDS=12

# Anthropic AI
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-opus-4-5-20251101
ANTHROPIC_FAST_MODEL=claude-haiku-4-5-20251001
ANTHROPIC_MAX_TOKENS=4096

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=notifications@company.com

# FX Rates
FX_API_KEY=your-fx-api-key
FX_API_URL=https://v6.exchangerate-api.com/v6/
FX_BASE_CURRENCY=AED
FX_CACHE_TTL_SECONDS=3600

# Monitoring
SENTRY_DSN=
