# TradeFlow OS - Production Environment Configuration
# Copy this file to .env.production and update all values

# ============================================================================
# Application Environment
# ============================================================================
APP_ENV=production
APP_NAME=TradeFlow OS
APP_DEBUG=false

# ============================================================================
# Database Configuration
# ============================================================================
# Note: Use connection pooling in production
# Format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://tradeflow:CHANGE_ME@db.tradeflow.local:5432/tradeflow_prod

# Database connection pool settings (PgBouncer recommended)
DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ============================================================================
# Authentication & Security
# ============================================================================
JWT_SECRET_KEY=CHANGE_ME_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS configuration
CORS_ORIGINS=https://tradeflow.com,https://app.tradeflow.com,https://api.tradeflow.com

# ============================================================================
# Frontend Configuration
# ============================================================================
NEXT_PUBLIC_API_URL=https://api.tradeflow.com

# ============================================================================
# MinIO Configuration (Object Storage)
# ============================================================================
# Self-hosted MinIO deployment
MINIO_HOST=minio:9000
MINIO_BUCKET=tradeflow-documents
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
MINIO_SECURE=true

# For external MinIO (e.g., AWS S3-compatible)
# MINIO_HOST=s3.amazonaws.com
# MINIO_BUCKET=tradeflow-documents-prod
# AWS_ACCESS_KEY_ID=YOUR_AWS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET

# ============================================================================
# AI Services (Anthropic)
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME_TO_YOUR_API_KEY
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@tradeflow.com

# ============================================================================
# Monitoring & Logging (Optional)
# ============================================================================
# Sentry error tracking
# SENTRY_DSN=https://YOUR_SENTRY_KEY@sentry.io/YOUR_PROJECT_ID
# SENTRY_ENVIRONMENT=production

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Redis Configuration (Optional - for caching/sessions)
# ============================================================================
# REDIS_URL=redis://redis:6379/0
# REDIS_PASSWORD=CHANGE_ME

# ============================================================================
# Subdomain Configuration (Multi-tenancy)
# ============================================================================
# Default subdomain for single-tenant deployments
DEFAULT_SUBDOMAIN=demo

# ============================================================================
# Admin Configuration
# ============================================================================
ADMIN_EMAIL=admin@tradeflow.com
ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_DOCUMENT_MANAGEMENT=true
ENABLE_AI_EXTRACTION=true
ENABLE_VENDOR_SEARCH=true
ENABLE_PROPOSAL_COMPARISON=true
ENABLE_ANALYTICS=false
